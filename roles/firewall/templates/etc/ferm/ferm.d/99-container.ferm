domain (ip ip6) {
    table filter {
        chain SMARTSERVER_FORWARD {
            proto ipv6-icmp DROP; # disables podman IPv6 broadcasts
        }

        chain SMARTSERVER_INPUT {
            saddr 0.0.0.0 daddr 255.255.255.255 proto udp DROP; # disables podman broadcasts
            #mod pkttype pkt-type broadcast;
            #mod pkttype pkt-type multicast;
        }
    }
}
