config softflowd
  option enabled        '1'
  option interface      'br-lan'
  option pcap_file      ''
  option timeout        'maxlife=60'
  option max_flows      '8192'
  option host_port      '{{default_server_ip}}:2055'
  option pid_file       '/var/run/softflowd1.pid'
  option control_socket '/var/run/softflowd1.ctl'
  option export_version '9'
  option hoplimit       ''
  option tracking_level 'full'
  option track_ipv6     ''
  option sampling_rate  '1'
  option filter         'not host {{default_server_gateway}}'
