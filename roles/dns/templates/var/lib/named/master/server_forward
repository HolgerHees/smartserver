$TTL 2d
@		IN SOA		{{server_name}}.	root.{{server_name}}. (
				2018041800	; serial
				3h		; refresh
				1h		; retry
				1w		; expiry
				1d )		; minimum

{{server_domain}}.	IN NS		ns.{{server_domain}}.
{{server_domain}}.	IN A		{{default_server_ip}}
*		IN A		{{default_server_ip}}
ns		IN A		{{default_server_ip}}
