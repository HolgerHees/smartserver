$TTL 2d
@		IN SOA		{{server_name}}.	root.{{server_name}}. (
				2018072000	; serial
				3h		; refresh
				1h		; retry
				1w		; expiry
				1d )		; minimum

{{default_server_arpa | regex_replace('^[\d]+\.','')}}.in-addr.arpa.	IN NS		ns.{{server_domain}}.
{{default_server_arpa}}.in-addr.arpa.	IN PTR		{{server_domain}}.
{{default_server_arpa}}.in-addr.arpa.	IN PTR		ns.{{server_domain}}.
