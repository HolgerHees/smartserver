[Unit]
Description=Create_macvlan_bridge
BindsTo=sys-subsystem-net-devices-{{main_network_interface}}.device
Wants=network-online.target
After=network.target network-online.target sys-subsystem-net-devices-{{main_network_interface}}.device

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/opt/docker/create_macvlan_bridge.sh

[Install]
WantedBy=multi-user.target
